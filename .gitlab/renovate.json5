{
  $schema: 'https://docs.renovatebot.com/renovate-schema.json',
  extends: [
    'config:recommended',
    'docker:enableMajor',
    'replacements:k8s-registry-move',
    ':disableRateLimiting',
    ':dependencyDashboard',
    ':enablePreCommit',
    ':semanticCommits',
    ':enableVulnerabilityAlerts',
    'github>whitesource/merge-confidence:beta',
    'local>Homelab/K3s-Flux//.gitlab/renovate/commitMessage.json5',
    'local>Homelab/K3s-Flux//.gitlab/renovate/customDatasources.json5',
    'local>Homelab/K3s-Flux//.gitlab/renovate/customManagers.json5',
    'local>Homelab/K3s-Flux//.gitlab/renovate/groups.json5',
    'local>Homelab/K3s-Flux//.gitlab/renovate/labels.json5',
    'local>Homelab/K3s-Flux//.gitlab/renovate/packageRules.json5',
    'local>Homelab/K3s-Flux//.gitlab/renovate/semanticCommits.json5',
    'security:openssf-scorecard',
  ],
  enabled: true,
  prConcurrentLimit: 3,
  configWarningReuseIssue: true,
  configMigration: true,
  dependencyDashboard: true,
  dependencyDashboardTitle: 'Renovate Dashboard',
  osvVulnerabilityAlerts: true,
  dependencyDashboardOSVVulnerabilitySummary: 'all',
  vulnerabilityAlerts: {
    labels: ["security"],
    automerge: true,
    automergeType: "branch",
    schedule: ["at any time"]
  },
  gitLabIgnoreApprovals: true,
  suppressNotifications: [
    'prIgnoreNotification',
  ],
  rebaseWhen: 'behind-base-branch',
  ignorePaths: [
    '**/archive/**',
  ],
  lockFileMaintenance: {
    enabled: true,
  },
  poetry: {
    enabled: true,
    rangeStrategy: 'bump',
  },
  flux: {
    fileMatch: [
      '(^|/)cluster/.+\\.ya?ml(\\.j2)?$',
    ],
  },
  'helm-values': {
    fileMatch: [
      '(^|/)cluster/.+\\.ya?ml(\\.j2)?$',
    ],
  },
  kubernetes: {
    fileMatch: [
      '(^|/)\\.taskfiles/.+\\.ya?ml(\\.j2)?$',
      '(^|/)ansible/.+\\.ya?ml(\\.j2)?$',
      '(^|/)cluster/.+\\.ya?ml(\\.j2)?$',
    ],
  },
}
