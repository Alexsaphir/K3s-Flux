{
  $schema: 'https://docs.renovatebot.com/renovate-schema.json',
  extends: [
    'config:recommended',
    'docker:enableMajor',
    'replacements:k8s-registry-move',
    ':disableRateLimiting',
    ':dependencyDashboard',
    ':enablePreCommit',
    ':semanticCommits',
    'github>whitesource/merge-confidence:beta',
    'local>Homelab/K3s-Flux//.gitlab/renovate/commitMessage.json5',
    'local>Homelab/K3s-Flux//.gitlab/renovate/customManagers.json5',
    'local>Homelab/K3s-Flux//.gitlab/renovate/grafanaDashboards.json5',
    'local>Homelab/K3s-Flux//.gitlab/renovate/groups.json5',
    'local>Homelab/K3s-Flux//.gitlab/renovate/labels.json5',
    'local>Homelab/K3s-Flux//.gitlab/renovate/packageRules.json5',
    'local>Homelab/K3s-Flux//.gitlab/renovate/semanticCommits.json5',
    'security:openssf-scorecard',
    'github>aquaproj/aqua-renovate-config#2.3.0'
  ],
  enabled: true,
  prConcurrentLimit: 3,
  configWarningReuseIssue: true,
  configMigration: true,
  dependencyDashboard: true,
  dependencyDashboardTitle: 'Renovate Dashboard',
  gitLabIgnoreApprovals: true,
  suppressNotifications: [
    'prEditedNotification',
    'prIgnoreNotification',
  ],
  rebaseWhen: 'behind-base-branch',
  assigneesFromCodeOwners: true,
  reviewersFromCodeOwners: true,
  ignorePaths: [
    '**/*.sops.*',
    '**/archive/**',
  ],
  lockFileMaintenance: {
    enabled: true,
  },
  poetry: {
    enabled: true,
    rangeStrategy: 'bump',
  },
  flux: {
    fileMatch: [
      '(^|/)cluster/.+\\.ya?ml(\\.j2)?$',
    ],
  },
  'helm-values': {
    fileMatch: [
      '(^|/)cluster/.+\\.ya?ml(\\.j2)?$',
    ],
  },
  kubernetes: {
    fileMatch: [
      '(^|/)\\.taskfiles/.+\\.ya?ml(\\.j2)?$',
      '(^|/)ansible/.+\\.ya?ml(\\.j2)?$',
      '(^|/)cluster/.+\\.ya?ml(\\.j2)?$',
    ],
  },
  ignoreDeps: [
    'ghcr.io/fluxcd/helm-controller',
    'ghcr.io/fluxcd/image-automation-controller',
    'ghcr.io/fluxcd/image-reflector-controller',
    'ghcr.io/fluxcd/kustomize-controller',
    'ghcr.io/fluxcd/notification-controller',
    'ghcr.io/fluxcd/source-controller',
  ],
  "customManagers": [
    {
      "fileMatch": [
        "\\.yaml$"
      ],
      "matchStrings": [
        "imageName: ['\"]?(?<depName>.+?):(?<currentValue>.+)['\"]?"
      ],
      "datasourceTemplate": "docker"
    }
  ]
}
